{
  "name": "clear-night-ui",
  "theme": "ui",
  "version": "1.3.4",
  "description": "Atom Clear Night dark UI theme",
  "author": {
    "name": "Northern Spiral"
  },
  "license": "MIT",
  "main": "lib/main",
  "keywords": [
    "dark",
    "adaptive",
    "ui",
    "night",
    "blue"
  ],
  "homepage": "https://github.com/northernspiral/clear-night-ui",
  "repository": "https://github.com/northernspiral/clear-night-ui",
  "bugs": {
    "url": "https://github.com/northernspiral/clear-night-ui/issues"
  },
  "engines": {
    "atom": ">=1.13.0 <2.0.0"
  },
  "devDependencies": {
    "coffeelint": "^1.9.7"
  },
  "configSchema": {
    "fontSize": {
      "title": "Font Size",
      "description": "Change the UI font size. Needs to be between 8 and 20.",
      "type": [
        "integer",
        "string"
      ],
      "minimum": 8,
      "maximum": 20,
      "default": "Auto"
    },
    "layoutMode": {
      "title": "Layout Mode",
      "description": "In Auto mode, the UI will automatically adapt based on the window size.",
      "type": "string",
      "default": "Auto",
      "enum": [
        "Compact",
        "Auto",
        "Spacious"
      ]
    }
  }
}
